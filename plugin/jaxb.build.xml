<project name="jaxb" default="jaxb">
  <description>
  Supports JAXB binding process (creation of Java classes from the XmlSchema documents.)
  </description>

  <property environment="env" />
  <!-- If the JAXB_TARGET env var is not defined, provide a default definition. -->
  <property name="env.JAXB_TARGET" value="2.0"/>
  
  <!-- Make sure that the JAXB compiler is available. -->
  <available file="${basedir}/lib/jaxb-xjc.jar" property="jaxb.xjc.available" />
  <fail message="Could not find ${basedir}/lib/jaxb-xjc.jar" unless="jaxb.xjc.available" />
 
  <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
    <classpath>
      <fileset dir="${basedir}/lib" includes="*.jar" />
    </classpath>
  </taskdef>

  <target name="jaxb" description="Runs the XJC compiler.">
    <echo message="Compiling using ${basedir} for target version ${env.JAXB_TARGET}."/>
    <xjc schema="${basedir}/xsd/preference.xsd" destdir="src" package="edu.hawaii.ics.csdl.jupiter.file.preference">
      <produces dir="${basedir}/src/edu/hawaii/ics/csdl/jupiter/file/preference" includes="*" />
    </xjc>
    
    <xjc schema="${basedir}/xsd/property.xsd" destdir="src" package="edu.hawaii.ics.csdl.jupiter.file.property">
      <produces dir="${basedir}/src/edu/hawaii/ics/csdl/jupiter/file/property" includes="*" />
    </xjc>
    
    <xjc schema="${basedir}/xsd/review.xsd" destdir="src" package="edu.hawaii.ics.csdl.jupiter.file.review">
      <produces dir="${basedir}/src/edu/hawaii/ics/csdl/jupiter/file/review" includes="*" />
    </xjc>
  </target>
</project>