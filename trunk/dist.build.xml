<project name="dist" default="dist">
  <description>
  Provides the target for building a distribution of the StackyHack system.
  </description>

  <import file="build.xml"/>
  <import file="javadoc.build.xml"/>
  <import file="jar.build.xml"/>   
    
  <target name="dist" depends="clean, compile, javadoc, jar" description="Create a distribution package.">
    <!-- Define the directories and distribution name -->
    <property name="dist.dir" location="${build.dir}/dist" />
    <property name="tmp.dir" location="${basedir}/tmp" />
    <property name="dist.name" value="${system.name}-${version}" />

    <!-- Copy distribution files to the tmp dir. -->
    <delete dir="${tmp.dir}" />
    <mkdir dir="${tmp.dir}/${dist.name}" />
    <copy todir="${tmp.dir}/${dist.name}">
      <fileset dir="${basedir}" excludes="bin/**, **/.svn/*, **/*~, tmp/**, build/**" />
    </copy>

    <!-- Create the zip distribution of this system, and then delete the tmp dir. -->
    <mkdir dir="${dist.dir}" />
    <zip zipfile="${dist.dir}/${system.name}-${version}.zip" basedir="${tmp.dir}" />
  </target>
   

  <target name="dist-jaxb" depends="compile" description="Create a distribution package.">
    <!-- Define the directories and distribution name -->
    <property name="dist.dir" location="${build.dir}/dist" />
    <property name="tmp.dir" location="${basedir}/tmp" />
    <property name="dist.name" value="${system.name}-jaxb-${version}" />

    <!-- Copy distribution files to the tmp dir. -->
    <mkdir dir="${tmp.dir}/${dist.name}" />
    <copy todir="${tmp.dir}/${dist.name}">
      <fileset dir="${basedir}/build/classes" includes="**/jaxb/**" />
    </copy>

    <!-- Create the zip distribution of this system, and then delete the tmp dir. -->
    <mkdir dir="${dist.dir}" />
    <jar destfile="${dist.dir}/${dist.name}.jar" basedir="${tmp.dir}/${dist.name}" />
    <delete dir="${tmp.dir}" />
  </target>

</project>

